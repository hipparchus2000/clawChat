# ClawChat Environment Variables
# Copy this file to .env and update values
# Never commit .env to version control!

# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT_MIN=8000
SERVER_PORT_MAX=9000
SERVER_MAX_CONNECTIONS=100

# Security Configuration
ENCRYPTION_KEY=your-32-byte-hex-encryption-key-here
ROTATION_INTERVAL=3600
REQUIRE_AUTHENTICATION=true
MAX_UPLOAD_SIZE=52428800

# Mega.nz Configuration (optional)
MEGA_EMAIL=your-email@example.com
MEGA_PASSWORD=your-password
MEGA_CONFIG_PATH=/clawchat/config.enc

# Database Configuration
DATABASE_PATH=./clawchat.db
DATABASE_POOL_SIZE=10

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=/var/log/clawchat/server.log
LOG_MAX_SIZE=10485760

# Frontend Configuration
FRONTEND_URL=http://localhost:8000
ENABLE_CORS=true

# Feature Flags
CHAT_ENABLED=true
FILE_MANAGEMENT_ENABLED=true
PORT_ROTATION_ENABLED=true
MEGA_UPLOAD_ENABLED=false

# Development Settings (DO NOT use in production!)
DEBUG=false
AUTO_RELOAD=false
MOCK_MEGA=true

# API Keys (if needed for integrations)
# SLACK_BOT_TOKEN=
# GITHUB_TOKEN=
# OPENAI_API_KEY=

# External Service URLs
# REDIS_URL=redis://localhost:6379
# POSTGRES_URL=postgresql://user:password@localhost/clawchat

# Monitoring
# SENTRY_DSN=
# DATADOG_API_KEY=

# Notes:
# 1. Generate encryption key: python -c "import secrets; print(secrets.token_hex(32))"
# 2. For production, use a secure secret management system
# 3. Rotate keys regularly
# 4. Use different keys for different environments